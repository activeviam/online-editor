{
  "compilerOptions": {
    "declarationDir": "./dist",
    "rootDir": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "composite": true
  },
  "include": ["./src"],
  "exclude": ["src/**/*.test.ts"]
}
