{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "target": "ES6",
    "module": "CommonJS",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    // "noUnusedLocals": true,
    "noImplicitReturns": true,
    "composite": true
  }
}
